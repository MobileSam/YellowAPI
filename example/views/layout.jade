!!!5
html
  head
    title YellowPages.ca™
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/desktop.css')

  body.ypg(lang='en', class=page + ' ' + section)
    header
      if page != 'indexPage'
        a.button.back(href='/business') Home

      h1
        a.logo.yp_en(href='/business') &nbsp;

      if page == 'searchPage'
        a#btnFilter.button.filters(href='#') Refine

      if page == 'indexPage'
        section
          ul
            li.business
              a(href='#') Business
            li.reverse
              a(href='#') Reverse

        a.button.showMenu(href='#')

    block content


    footer
      ul
        li
          a(href='/business') Home
        li
          a(href='/privacy') Privacy
        li
          a(href='/legal-notice') Legal Notice

      p Copyright © 2012 Yellow Pages Group Co.
      p All Rights Reserved.


    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
    script(src='/js/script.js')
    script(src='http://mobile.yp.ca/js/optimized-ypg.js?1352868108')
    script(src='http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0&amp;mkt=en-US')
    script(src='/js/bing.js')
